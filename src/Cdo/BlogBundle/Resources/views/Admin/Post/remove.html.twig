{% extends "CdoBlogBundle:Admin/Blog:layout.html.twig" %}

{% block title %}
    Supprimer l'article &laquo {{ post.title }} &raquo
{% endblock title %}

{% block heading %}
    <h1>Supprimer l'article &laquo {{ post.title }} &raquo</h1>
{% endblock heading %}

{% block innercontent %}
    <br />
    <p class="text-center">Etes-vous certain(e) de vouloir supprimer l'article &laquo; <b>{{ post.title }}</b> &raquo; ?</p>
    <p class="text-center">Vous ne pourrez pas revenir sur cette action.</p>
    <br />
    <form action="{{ path('cdo_blog_admin_post_remove', {'post': post.id, 'subdomain': app.session.get('subdomain')}) }}" method="post" class="text-center">
        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default btn-lg">Annuler</a>
        <input type="submit" value="Supprimer" class="btn btn-danger btn-lg" />
        {{ form_rest(form) }}
    </form>
{% endblock innercontent %}