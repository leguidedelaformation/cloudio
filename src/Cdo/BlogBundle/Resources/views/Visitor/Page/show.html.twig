{% extends "CdoBlogBundle:Visitor:layout.html.twig" %}

{% block title %}
    {{ page.title }} {{ parent() }}
{% endblock title %}

{% block header %}
    {{ render(controller('CdoSiteBundle:Visitor/Site:navbarPage', {'tab_active': tab_active, 'subdomain': app.session.get('subdomain')})) }}
{% endblock header %}

{% block container %}
    <div id="pagecontent">
        <h1>{{ page.title }}</h1>
        <p>{{ page.content|raw }}</p>
    </div><!-- /#pagecontent -->
{% endblock container %}