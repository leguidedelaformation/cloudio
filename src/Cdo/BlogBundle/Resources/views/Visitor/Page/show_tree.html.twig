{% extends "CdoBlogBundle:Visitor/Page:show.html.twig" %}

{% block container %}
	<div class="row">
	    <div class="col-xs-3 {% if cdo_page_sidemenu == 'right' %}col-xs-push-9{% endif %}" id="pagemenu">
	        <ul>
		        {% for child_0 in tab_active.children %}
                    {% if child_0.display %}
                        <li><a href="{{ path('cdo_blog_visitor_page_show', {'slug': child_0.slug, 'subdomain': app.session.get('subdomain')}) }}">{{ child_0.title }} <span class="sr-only">{{ child_0.title }}</span></a></li>
                        <ul>
                        {% for child_1 in child_0.children %}
                            {% if child_1.display %}
                                <li><a href="{{ path('cdo_blog_visitor_page_show', {'slug': child_1.slug, 'subdomain': app.session.get('subdomain')}) }}">{{ child_1.title }} <span class="sr-only">{{ child_1.title }}</span></a></li>
                            {% endif %}
                        {% endfor %}
                        </ul>
                    {% endif %}
		        {% endfor %}
	        </ul>
	    </div><!--  /.col-xs-3 -->
	    <div class="col-xs-9 {% if cdo_page_sidemenu == 'right' %}col-xs-pull-3{% endif %}" id="pagecontent">
		    <h1>{{ page.title }}</h1>
		    <p>{{ page.content|raw }}</p>
	    </div><!--  /.col-xs-9 -->
    </div><!--  /.row -->
{% endblock container %}