{% extends "CdoSiteBundle:Admin/Form:update.html.twig" %}

{% block formfields %}
    <div class="form-group control-label">
        <div class="col-sm-3">
            {{ form_label(form.body_width) }}
        </div><!-- /.col-sm-3 -->
        <div class="col-sm-9">
            <div class="input-group">
                {{ form_widget(form.body_width) }}
                <div class="input-group-addon">px</div>
            </div><!-- /.input-group -->
            {{ form_errors(form.body_width) }}
        </div><!-- /.col-sm-9 -->
    </div><!-- /.form-group -->
    <div class="form-group control-label">
        <div class="col-sm-3">
            {{ form_label(form.body_background) }}
        </div><!-- /.col-sm-3 -->
        <div class="col-sm-9">
            {{ form_widget(form.body_background, { 'attr': {'class': 'colorpick'} }) }}
            {{ form_errors(form.body_background) }}
        </div><!-- /.col-sm-9 -->
    </div><!-- /.form-group -->
    <div class="form-group control-label">
        <div class="col-sm-3">
            {{ form_label(form.body_backgroundimage) }}
        </div><!-- /.col-sm-3 -->
        <div class="col-sm-9">
            {{ form_widget(form.body_backgroundimage, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.body_backgroundimage) }}
        </div><!-- /.col-sm-9 -->
    </div><!-- /.form-group -->
{% endblock formfields %}